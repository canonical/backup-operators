{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/)rockcraft.yaml$/"
      ],
      "description": "Update base image references",
      "matchStringsStrategy": "any",
      "matchStrings": [
        "# renovate: build-base:\\s+(?<depName>[^:]*):(?<currentValue>[^\\s@]*)(@(?<currentDigest>sha256:[0-9a-f]*))?",
        "# renovate: base:\\s+(?<depName>[^:]*):(?<currentValue>[^\\s@]*)(@(?<currentDigest>sha256:[0-9a-f]*))?"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "ubuntu"
    },
    {
      "customType": "regex",
      "description": "Update Bacula versions",
      "managerFilePatterns": [
        "/(^|/)snapcraft\\.yaml$/"
      ],
      "matchStrings": [
        "source-tag:\\s*Release-(?<currentValue>\\d+\\.\\d+\\.\\d+)",
        "(?:^|\\n|\\r)\\s*version:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "gitlab-tags",
      "depNameTemplate": "bacula-community-edition/bacula-community",
      "registryUrlTemplate": "https://gitlab.bacula.org",
      "extractVersionTemplate": "^Release-(?<version>\\d+\\.\\d+\\.\\d+)$",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "enabled": true,
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": true
    },
    {
      "matchFileNames": [
        "rockcraft.yaml"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "enabled": false
    },
    {
      "matchDatasources": [
        "terraform-provider"
      ],
      "matchPackageNames": [
        "juju/juju"
      ],
      "enabled": true
    }
  ]
}
